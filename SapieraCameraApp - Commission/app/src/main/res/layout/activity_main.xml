<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp">

    <!-- Camera (Main Focus) -->
    <LinearLayout
        android:id="@+id/camera_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_apps_container"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageButton
            android:id="@+id/cameraBtn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            android:clipToOutline="true"
            android:contentDescription="@string/camera_button"
            android:scaleType="centerCrop"
            android:src="@drawable/camera" />
        <TextView
            android:id="@+id/cameraLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Camera"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <!-- Bottom Apps Container -->
    <LinearLayout
        android:id="@+id/bottom_apps_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        android:gravity="center">

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Gallery -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">
                <ImageButton
                    android:id="@+id/galleryBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:clipToOutline="true"
                    android:contentDescription="@string/gallery_button"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gallery"/>
                <TextView
                    android:id="@+id/galleryLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Gallery"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <!-- Messages -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">
                <ImageButton
                    android:id="@+id/messagesBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:clipToOutline="true"
                    android:contentDescription="@string/messages_button"
                    android:scaleType="centerCrop"
                    android:src="@drawable/messages"/>
                <TextView
                    android:id="@+id/messagesLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Messages"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <!-- Contacts -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">
                <ImageButton
                    android:id="@+id/contactsBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:clipToOutline="true"
                    android:contentDescription="@string/contacts_button"
                    android:scaleType="centerCrop"
                    android:src="@drawable/contacts"/>
                <TextView
                    android:id="@+id/contactsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Contacts"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Facebook -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">
                <ImageButton
                    android:id="@+id/facebookBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:clipToOutline="true"
                    android:contentDescription="@string/facebook_button"
                    android:scaleType="centerCrop"
                    android:src="@drawable/facebook"/>
                <TextView
                    android:id="@+id/facebookLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Facebook"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <!-- Instagram -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">
                <ImageButton
                    android:id="@+id/instagramBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:clipToOutline="true"
                    android:contentDescription="@string/instagram_button"
                    android:scaleType="centerCrop"
                    android:src="@drawable/instagram"/>
                <TextView
                    android:id="@+id/instagramLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Instagram"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <!-- YouTube -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="16dp">
                <ImageButton
                    android:id="@+id/youtubeBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:clipToOutline="true"
                    android:contentDescription="@string/youtube_button"
                    android:scaleType="centerCrop"
                    android:src="@drawable/youtube"/>
                <TextView
                    android:id="@+id/youtubeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="YouTube"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
